<div class="item_index-left">
  <p class="genre_search_title">
    ジャンル検索
  </p>
    
  <ul class="genre_list">
    <% @genres.each do |genre| %>
      <li>
        <%= link_to genre.name, items_path(genre_id: genre.id) %>
      </li>
    <% end %>
  </ul>
   
  
</div>
<div class="item_index-right">
  <h2>商品一覧</h2>
  <p><%= "(全#{@items.count}件)" %></p>
  
  <div class="items_index_customer">
    <% @items.each do |item| %>
         <div class="item_card shadow-sm ">
          <%= link_to item_path(item), class: 'card_link' do %>
           <div class="item_image_wrrap">
              <%= image_tag item.image, class: 'item_image' %>
           </div>
           <p class="item_name"><%= item.name %></p>
           <p class="item_price">¥<%= item.with_tax_price.to_s(:delimited) %></p>
          <% end %>
         </div>
    <% end %>
  </div>
</div>
