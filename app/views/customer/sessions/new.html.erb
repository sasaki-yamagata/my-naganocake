<h2 class='login_title'>ログイン</h2>

<%= form_with model: @customer, url: customer_session_path, class: 'login_form' do |f| %>
  <p class='login_form_text'>会員の方はこちらからログイン</p>
  <div class="field row">
    <%= f.label :email, 'メールアドレス', class: 'col-md-2' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-md-3' %>
  </div>

  <div class="field row">
    <%= f.label :password, 'パスワード', class: 'col-md-2' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'co-md-3' %>
  </div>

  <!--<% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%= f.check_box :remember_me %>-->
  <!--    <%= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<% end %>-->

  <div class="actions">
    <%= f.submit "ログイン", class: 'btn btn-primary' %>
  </div>
<% end %>
<p　class="not_sing_up_text">会員登録がお済みで無い方</p>
