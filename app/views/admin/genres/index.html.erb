<h2 class="genre_index_title">ジャンル一覧・追加</h2>
<%= render 'layouts/errors', obj: @genre %>
<%= form_with model: @genre, url: admin_genres_path, class: 'genre-form' do |f| %>
  <div class="genre_form_group ">
    <%= f.label :name, 'ジャンル名', class: 'genre_label' %>
    <%= f.text_field :name, :placeholder => 'ジャンル名', class: 'genre_input' %>
  </div>
  <div class="genre_submit">
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>
<% end %>
<div class="genres">
  <table class="genres_table table">
    <thead>
      <tr>
        <th>
        ジャンル
        </th>
        <th colspan=1></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
