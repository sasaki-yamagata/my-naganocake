<h2>ジャンル編集</h2>
<%= form_with model: @genre, url: admin_genre_path(@genre), class: 'genre-edit' do |f| %>
  <div class="genre_edit_group ">
    <%= f.label :name, 'ジャンル名', class: 'genre_label' %>
    <%= f.text_field :name, :placeholder => 'ジャンル名', class: 'genre_input' %>
  </div>
  <div class="genre_submit">
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
  </div>
<% end %>
