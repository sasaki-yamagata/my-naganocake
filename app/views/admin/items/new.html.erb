<h2 class="item_new_titel">商品新規登録</h2>
<%= render 'layouts/errors', obj: @item %>
<%= form_with model: @item, url: admin_items_path do |f| %>
  <div class="item_form_group">
    <%= f.label :image, '商品画像' %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="item_form_group">
    <%= f.label :name, '商品名' %>
    <%= f.text_field :name, :placeholder => '商品名' %>
  </div>
  <div class="item_form_group">
    <%= f.label :introduction, '商品説明' %>
    <%= f.text_area :introduction, :placeholder => 'ここに説明文を記述します' %>
  </div>
  <div class="item_form_group">
    <%= f.label :genre_id, 'ジャンル' %>
    <%= f.collection_select :genre_id, @genres, :id, :name, prompt: '--選択してください--' %>
  </div>
  <div class="item_form_group">
    <%= label :tax_excluded_price, '税込価格' %>
    <%= f.text_field :tax_excluded_price, :placeholder => '1000' %>
  </div>
  <div class='item_form_group'>
    <%= label :is_sale, '販売ステータス' %>
    <%= f.radio_button :is_sale, true %>
    <%= f.label :is_sale, '販売中', {value: true, style: "display: inline-block;"} %>
    <%= f.radio_button :is_sale, false %>
    <%= f.label :is_sale, '販売停止中', {value: false, style: "display: inline-block;"} %>
  </div>
  <div class="item_form_submit">
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>

<% end %>