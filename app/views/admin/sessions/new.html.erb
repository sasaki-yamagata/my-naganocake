<h2 class="admin_login_title">管理者ログイン</h2>

<%= form_with model: @admin, url: admin_session_path, class: 'admin_signed_form' do |f| %>
  <div class="field row">
    <%= f.label :email, 'メールアドレス', class: 'col-md-2' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-md-3' %>
  </div>

  <div class="field row">
    <%= f.label :password, 'パスワード', class: 'col-md-2' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'col-md-3' %>
  </div>

  <!--<% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%= f.check_box :remember_me %>-->
  <!--    <%= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<% end %>-->

  <div class="actions">
     <%= f.submit "ログイン", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
