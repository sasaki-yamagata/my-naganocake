<header class="header">
  <div class="header_inner">
    <h1 class="logo">
    <%= link_to "LOGO", root_path %>
    </h1>
    <div class="header-right">
      <nav class="nav">
        <ul class="nav_list">
          <% if customer_signed_in? && !admin_signed_in? %>
            <li class="nav_item">
              <%= link_to 'マイページ', mypage_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav_item">
              <%= link_to "商品一覧", items_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav_item">
              <%= link_to "カート", cart_items_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav_item">
              <%= link_to "ログアウト", destroy_customer_session_path, class: 'btn btn-outline-dark', method: :delete %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav_item">
              <%= link_to "商品一覧", admin_items_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav_item">
              <%= link_to '会員一覧', admin_customers_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav_item">
              <%= link_to "注文履歴一覧", admin_orders_path, class: 'btn btn-outline-dark'  %>
            </li>
            <li class="nav_item">
              <%= link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav_item">
              <%= link_to "ログアウト", destroy_admin_session_path, class: 'btn btn-outline-dark', method: :delete %>
            </li>
          
          <% else %>
            <li class="nav_item">
              <%= link_to 'about', about_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav_item">
              <%= link_to "商品一覧", items_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav_item">
              <%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-outline-dark' %>
            </li>
            <li class="nav_item">
              <%=  link_to "ログイン", new_customer_session_path, class: 'btn btn-outline-dark' %> 
            </li>
          <% end %>
          
        </ul>
      </nav>
      <div class="search_content">
        <%= form_with url: admin_items_path, method: :get, class: 'search_form' do |f| %>
          <%= f.text_field :keyword, value: @keyword, :placeholder => 'Search' %>
          <%= f.submit '検索' %>
        <% end %>
      </div>
    </div>
  </div>
  
 
</header>